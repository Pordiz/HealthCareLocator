<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FacilityName">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#007788</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FacilityAddress">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="FacilityDistance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#007788</item>
        <item name="colorPrimaryVariant">#005661</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#007788</item>
        <item name="colorSecondaryVariant">#005661</item>
        <item name="colorOnSecondary">#FFFFFF</item>
    </style>

    <style name="CustomOptionButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#007788</item>
        <item name="strokeColor">#007788</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:fontFamily">@font/poppins1</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">700</item>
    </style>
    <style name="CustomConfirmButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">#007788</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="strokeColor">#007788</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:fontFamily">@font/poppins3</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">700</item>
    </style>
    <style name="LabelStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/custom_hint_color</item>
        <item name="android:textColorHint">@color/custom_hint_color</item>
        <item name="colorPrimary">#007788</item>
    </style>
    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/bottom_nav_background</item>
        <item name="itemIconTint">@color/bottom_nav_item_selector</item>
        <item name="itemTextColor">@color/bottom_nav_item_selector</item>
    </style>
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:drawable/edit_text</item>
    </style>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">#007788</item>
        <item name="boxStrokeColor">#007788</item>
        <item name="boxBackgroundColor">#FFFFFF</item>
    </style>

</resources>
